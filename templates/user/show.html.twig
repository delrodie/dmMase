<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content modal-content-demo">
        <div class="modal-header">
            <h6 class="modal-title">Utilisateur</h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">Email: &nbsp; <strong>{{ user.email }}</strong></div>
            </div>
            <div class="row">
                <div class="col-md-12">Roles: &nbsp;
                    {% if user.roles[0] == 'ROLE_ADMIN' %}
                        <strong>Administrateur</strong>
                    {% elseif user.roles[1] == 'ROLE_EDIT' %}
                        <strong>Editeur</strong>
                    {% else %}
                        <strong>Utilisateur</strong>
                    {% endif %}
                </div>
            </div>
        </div><!-- modal-body -->
        <div class="modal-footer">
            {{ include('user/_delete_form.html.twig') }}
            <a href="{{ path('admin_user_edit', {'id':  user.id}) }}" class="btn btn-primary">Modifier</a>
            <button type="button" data-dismiss="modal" class="btn btn-outline-light">Fermer</button>
        </div>
    </div>
</div>