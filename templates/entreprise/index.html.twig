{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <h1>Entreprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>RaisonSociale</th>
                <th>Siege</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Annee</th>
                <th>Domaine</th>
                <th>Type</th>
                <th>Slug</th>
                <th>Valid</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.id }}</td>
                <td>{{ entreprise.raisonSociale }}</td>
                <td>{{ entreprise.siege }}</td>
                <td>{{ entreprise.adresse }}</td>
                <td>{{ entreprise.telephone }}</td>
                <td>{{ entreprise.email }}</td>
                <td>{{ entreprise.annee }}</td>
                <td>{{ entreprise.domaine }}</td>
                <td>{{ entreprise.type }}</td>
                <td>{{ entreprise.slug }}</td>
                <td>{{ entreprise.valid ? 'Yes' : 'No' }}</td>
                <td>{{ entreprise.createdAt ? entreprise.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('entreprise_show', {'id': entreprise.id}) }}">show</a>
                    <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entreprise_new') }}">Create new</a>
{% endblock %}
