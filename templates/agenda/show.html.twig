<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content modal-content-demo">
        <div class="modal-header">
            <h6 class="modal-title">{{ agenda.titre }}</h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <p class="text-justify">
                <img src="{{ absolute_url(asset('uploads/agenda/'~ agenda.media)) }}" alt="" class="img-thumbnail" style="width: 300px; float:left; margin-right: 15px;">
                {{ agenda.contenu|raw }}
            </p>
        </div><!-- modal-body -->
        <div class="modal-footer">
            {{ include('agenda/_delete_form.html.twig') }}
            <a href="{{ path('backend_agenda_edit', {'slug':  agenda.slug}) }}" class="btn btn-primary">Modifier</a>
            <button type="button" data-dismiss="modal" class="btn btn-outline-light">Fermer</button>
        </div>
    </div>
</div>