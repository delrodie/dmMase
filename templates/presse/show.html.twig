<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content modal-content-demo">
        <div class="modal-header">
            <h6 class="modal-title">{{ presse.titre }}</h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <p class="text-justify">
                {% if presse.media %}
                    <img src="{{ absolute_url(asset('uploads/presses/'~ presse.media)) }}" alt="" class="img-thumbnail" style="width: 300px; float:left; margin-right: 15px;">
                {% else %}
                    <iframe src="{{ presse.lien }}" frameborder="0" width="100%" style="min-height: 500px"></iframe>
                {% endif %}
            </p>
        </div><!-- modal-body -->
        <div class="modal-footer">
            {{ include('presse/_delete_form.html.twig') }}
            <a href="{{ path('backend_presse_edit', {'slug':  presse.slug}) }}" class="btn btn-primary">Modifier</a>
            <button type="button" data-dismiss="modal" class="btn btn-outline-light">Fermer</button>
        </div>
    </div>
</div>