{% extends 'base.html.twig' %}
{% block title %} Liste des actualites  {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-8 col-sm-12">
            <div class="box-caption">
                <span>Actaulit√©s</span>
            </div>
            <div class="list-news-cate mt-1">
                {% for actualite in actualites|slice(0,4) %}
                    <article class="news-cate-item {% if loop.first %}news-cate-item-first{% endif %} ">
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-12">
                                <a href="{{ absolute_url(path('frontend_actualite_show', {'slug': actualite.slug}) )}}">
                                    <img alt="{{ actualite.titre }}" src="{{ absolute_url(asset('uploads/actualites/'~ actualite.media)) }}">
                                </a>
                            </div>
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                <h3><a href="{{ absolute_url(path('frontend_actualite_show', {'slug': actualite.slug}) )}}">{{ actualite.titre }}</a></h3>
                                <div class="meta-post">
                                    <span> {{ actualite.createdAt|date("d/m/Y") }} </span>
                                </div>
                                <p>{{ actualite.contenu|raw|slice(0,200) }}...</p>
                            </div>
                        </div>
                    </article>
                {% endfor %}

            </div>
            {% if pagination %}
                <div class="paging">
                    <a href="#">Prec</a>
                    <a href="#">1</a>
                    <a href="#" class="current">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <a href="#">5</a>
                    <a href="#">Suiv</a>
                </div>
            {% endif %}

        </div>
        <div class="col-md-4 col-sm-4">
            {{ include('frontend/agenda_include.html.twig') }}
