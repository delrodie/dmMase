{% extends 'base.html.twig' %}
{% block title %} Liste des documents  {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-8 col-sm-12">
            <div class="box-caption mb-5">
                <span>Documents</span>
            </div>
            <div class="list-news-cate mt-3">
                {% for document in documents|slice(0,4) %}
                    <article class="news-cate-item {% if loop.first %}news-cate-item-first{% endif %} ">
                        <div class="row">
                            <div class="col-md-1 col-sm-1 col-xs-2">
                                <a href="{{ absolute_url(path('frontend_document_show', {'slug': document.slug}) )}}">
                                    <i class="fa fa-file-pdf-o fa-5x"></i>
                                </a>
                            </div>
                            <div class="col-md-10 col-sm-10 col-xs-10">
                                <h3><a href="{{ absolute_url(path('frontend_document_show', {'slug': document.slug}) )}}">{{ document.titre }}</a></h3>
                                <div class="meta-post">
                                    <span> {{ document.createdAt|date("d/m/Y") }} </span>
                                </div>
                                <p>{{ document.description|raw|slice(0,200) }}...</p>
                            </div>
                        </div>
                    </article>
                {% endfor %}

            </div>
            {% if pagination %}
                <div class="paging">
                    <a href="#">Prec</a>
                    <a href="#">1</a>
                    <a href="#" class="current">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <a href="#">5</a>
                    <a href="#">Suiv</a>
                </div>
            {% endif %}

        </div>
        <div class="col-md-4 col-sm-4">
            {{ include('frontend/agenda_include.html.twig') }}
            <div class="connect-us">
                <div class="row">
                    <div class="col-md-12">
                        <div id="fb-root"></div>
                        <div class="fb-page" data-href="https://www.facebook.com/dreammakercicom/" data-tabs="timeline" data-width="" data-height="" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/dreammakercicom/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/dreammakercicom/">DREAM MAKER</a></blockquote></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v6.0"></script>
{% endblock %}