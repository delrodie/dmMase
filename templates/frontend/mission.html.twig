{% extends 'base.html.twig' %}
{% block title %} Mission de MASE Côte d'Ivoire {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-8 col-sm-12">
            <article class="post-detail">
                <h1>Mission</h1>

                <div class="post-detail-img">
                    <img alt="" src="{{ absolute_url(asset('uploads/mission/'~ mission.media)) }}" width="1200" />
                </div>

                <p class="text-justify">
                    <span class="dropcap ">{{ mission.contenu|raw|slice(0,1) }}</span>
                    {{ mission.contenu|raw|slice(1) }}
                </p>

            </article>
        </div>
        <div class="col-md-4 col-sm-4">
            <ul role="tablist" class="tab-popular">
                <li class="active">
                    <a href="#tab1" role="tab" data-toggle="tab">
                        AGENDA
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="tab1">
                    <ul class="list-news-popular">
                        {% for agenda in agendas|slice(0,4) %}
                            <li>
                                <a href="#">
                                    <img alt="{{ agenda.titre }}" src="{{ absolute_url(asset('uploads/agenda/'~ agenda.media)) }}" width="100">
                                </a>
                                <h3><a href="#">{{ agenda.titre}}</a></h3>
                                <p>{{ agenda.contenu|raw|slice(0,80) }}...</p>
                                <div class="meta-post">
                                    <a href="#" title="Début période">
                                        <i class="fa fa-calendar"></i> {{ agenda.dateDebut|date('d/m/Y') }}
                                    </a>
                                    <em></em>
                                    <span>
                                            <a href="#" title="Fin période"><i class="fa fa-calendar"></i> {{  agenda.dateFin|date('d/m/Y') }}</a>

                                        </span>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="text-right all-agenda">
                        ...<a href="#">Archives Agenda</a>
                    </div>

                </div>
            </div>
            <div class="connect-us">
                <div class="row">
                    <div class="col-md-12">
                        <div id="fb-root"></div>
                        <div class="fb-page" data-href="https://www.facebook.com/dreammakercicom/" data-tabs="timeline" data-width="" data-height="" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/dreammakercicom/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/dreammakercicom/">DREAM MAKER</a></blockquote></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v6.0"></script>
{% endblock %}