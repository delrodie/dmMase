<form method="post" action="{{ path('backend_newsletter_delete', {'id': newsletter.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet email?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ newsletter.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
