{% extends 'security_layout.html.twig' %}

{% block title %}{{ parent() }} Connexion{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{message|raw}}
            </div>
        {% endfor %}
    {% endfor %}
    {{ form_start(form) }}
        <h1 class="h3 mb-3 font-weight-normal text-center">Mot de passe</h1>
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            <span class="text-danger">{{ form_errors(form.password) }}</span>
            {{ form_row(form.password.first,{'attr':{'class':'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password.second,{'attr':{'class':'form-control', 'placeholder': 'RÃ©petez le mot de passe'}}) }}
        </div>

        <button class="btn btn-az-primary btn-block" type="submit">
            Modifier
        </button>
    {{ form_end(form) }}

    <div class="az-signin-footer mt-2">
        <p><a href="{{ path('app_logout') }}">Annuler la modification</a></p>
    </div>
{% endblock %}
