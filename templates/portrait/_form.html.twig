{{ form_start(form) }}
    <div class="row form-group d-md-flex">
        <div class="col-md-6 mt-3">{{ form_row(form.instance) }}</div>
        <div class="col-md-6 mt-3">{{ form_row(form.nom) }}</div>
        <div class="col-md-6 mt-3">{{ form_row(form.prenoms) }}</div>
        <div class="col-md-6 mt-3">{{ form_row(form.fonction) }}</div>
        <div class="col-md-6 mt-3">{{ form_row(form.ordre) }}</div>
        <div class="col-md-12 mt-3">{{ form_row(form.biographie) }}</div>
    </div>
    <div class="row form-group d-md-flex mt-3">
        <div class="col-md-6 mg-b-20">
            <img class="preview" />
            <div class="custom-file">
                {{ form_widget(form.media) }}
                <label class="custom-file-label" for="customFile">Télécharger la photo</label>
            </div>
        </div>
    </div>
    <div class="row form-group d-md-flex">
        <div class="col-md-12 mg-b-20 text-right">
            {{ form_widget(form) }}
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> &nbsp; {{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
{{ form_end(form) }}
